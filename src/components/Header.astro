---
// src/components/Header.astro
---
<header>
    <div class="container">
        <a href="/" class="logo-group">
            <img src="/images/college-logo.png" alt="Knowledge Institute of Technology Logo" class="logo-image college-logo" />
            <div class="separator"></div>
            <img src="/images/club-logo.png" alt="Synergy Squad Logo" class="logo-image club-logo" />
            <span class="club-name">Synergy Squad</span>
        </a>
        <nav>
            <a href="/challenges">Challenges</a>
            <a href="/achievements">Achievements</a>
            <a href="/squad">Squad</a> <!-- Changed from Gallery -->
            <a href="/vision-mission">Vision & Mission</a>
        </nav>
    </div>
</header>
<style>
    /* All styles are correct and unchanged */
    header {
        background-color: rgba(255, 255, 255, 0.85); border-bottom: 1px solid var(--border-color);
        padding: 0.75rem 1.5rem; position: sticky; top: 0; z-index: 10;
        backdrop-filter: blur(10px);
    }
    .container {
        margin: auto; max-width: 1200px; display: flex;
        justify-content: space-between; align-items: center;
    }
    .logo-group { display: flex; align-items: center; gap: 1rem; text-decoration: none; }
    .separator { height: 28px; width: 1px; background-color: var(--border-color); }
    .logo-image { display: block; object-fit: contain; }
    .college-logo { height: 45px; width: auto; }
    .club-logo { height: 40px; width: auto; }
    .club-name { font-size: 1.25rem; font-weight: 600; color: var(--text-primary); }
    nav { display: flex; align-items: center; gap: 2.5rem; }
    nav a {
        text-decoration: none; color: var(--text-secondary); font-weight: 500;
        transition: color 0.2s ease; padding: 0.5rem 0;
    }
    nav a:hover { color: var(--primary-color); }
</style>