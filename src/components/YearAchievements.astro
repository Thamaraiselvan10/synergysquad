---
// src/components/YearAchievements.astro
import type { inferReactProps } from "@astrojs/react/runtime";

// This defines the "shape" of the data we expect to receive
export interface Props {
    data: {
        year: string;
        title: string;
        summary: string;
        weeklyActivities: { name: string, date: string }[];
        topperLists: { title: string, imageUrl: string, toppers: string[] }[];
    }
}
const { data } = Astro.props;
---

<div class="year-container">
    <!-- Main Summary Block -->
    <div class="summary-block">
        <h2>{data.title}</h2>
        <p>{data.summary}</p>
    </div>

    <!-- Weekly Activities Table -->
    <div class="section-block">
        <h3>Weekly Activity Summary</h3>
        <div class="table-container">
            <div class="table-header">
                <div>Activity Name</div>
                <div>Date Conducted</div>
            </div>
            {data.weeklyActivities.map(activity => (
                <div class="table-row">
                    <div>{activity.name}</div>
                    <div>{activity.date}</div>
                </div>
            ))}
        </div>
    </div>

    <!-- Topper Lists Grid -->
    <div class="section-block">
        <h3>Activity Execution Reports</h3>
        <div class="achievements-grid">
            {data.topperLists.map(achievement => (
                <div class="achievement-card">
                    <div class="image-container">
                        <img src={achievement.imageUrl || 'https://picsum.photos/400/500'} alt={achievement.title} loading="lazy"/>
                    </div>
                    <div class="content-container">
                        <h4>{achievement.title}</h4>
                        <ul class="toppers-list">
                            {achievement.toppers.map(topper => <li>{topper}</li>)}
                        </ul>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>

<style>
    .year-container {
        max-width: 1400px;
        margin: auto;
        padding: 4rem 1.5rem;
    }
    .summary-block {
        background-color: #fff;
        border: 1px solid var(--border-color);
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 3rem;
        text-align: center;
    }
    .summary-block h2 { font-size: 1.75rem; margin-top: 0; }
    .summary-block p { font-size: 1.1rem; color: var(--text-secondary); max-width: 70ch; margin: auto; }

    .section-block {
        margin-bottom: 3rem;
    }
    .section-block h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 0.5rem;
    }

    /* Table Styles */
    .table-container {
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        overflow: hidden;
    }
    .table-header, .table-row { display: grid; grid-template-columns: 2fr 1fr; padding: 1rem; }
    .table-header { font-weight: 600; background-color: #f8fafc; }
    .table-row { border-top: 1px solid var(--border-color); }
    .table-row div:last-child { color: var(--text-secondary); }

    /* Re-using the achievements grid from the homepage */
    .achievements-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
    @media (max-width: 1024px) { .achievements-grid { grid-template-columns: repeat(2, 1fr); } }
    @media (max-width: 640px) { .achievements-grid { grid-template-columns: 1fr; } }
    
    /* Re-using the achievement card styles */
    .achievement-card {
        background-color: #fff; border-radius: 12px; border: 1px solid var(--border-color);
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
        display: flex; flex-direction: column;
    }
    .image-container { border-top-left-radius: 11px; border-top-right-radius: 11px; overflow: hidden; aspect-ratio: 4 / 5; }
    .image-container img { width: 100%; height: 100%; object-fit: cover; }
    .content-container { padding: 1.25rem; }
    .content-container h4 { font-size: 1.125rem; font-weight: 700; margin-top: 0; margin-bottom: 1rem; }
    .toppers-list { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.5rem; }
    .toppers-list li { font-size: 0.9rem; font-weight: 500; color: var(--text-secondary); padding-left: 1.5rem; position: relative; }
    .toppers-list li::before { content: 'üèÜ'; position: absolute; left: 0; top: 0; font-size: 0.8rem; }
</style>