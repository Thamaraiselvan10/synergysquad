---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Synergy Squad">
    <div class="contact-page-wrapper">
        <div class="contact-card fade-in-up">
            <div class="profile-picture">
                <!-- LATER: Replace this with the actual image path -->
                <img src="https://i.pravatar.cc/150?u=DrKPraveen" alt="Dr. K. Praveen"/>
            </div>
            <h1 class="faculty-name">Dr. K. Praveen</h1>
            <p class="faculty-title">Programming Coordinator - CSE</p>

            <div class="separator"></div>

            <div class="contact-details">
                <a href="mailto:praveenk@kiot.ac.in" class="contact-item">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                        <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                    </svg>
                    <span>praveenk@kiot.ac.in</span>
                </a>
                <a href="tel:+910000000000" class="contact-item">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.279-.087.431l4.108 7.552a.75.75 0 001.25.078l.431-.646 1.293-.97a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C6.542 22.5 1.5 17.458 1.5 11.25V9a4.5 4.5 0 014.5-4.5H6z" clip-rule="evenodd" />
                    </svg>
                    <span>+91 00000 00000</span>
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .contact-page-wrapper {
        /* min-height: 80vh;  <-- THIS LINE IS REMOVED */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6rem 1.5rem; /* Increased padding for good spacing */
        background-color: #0f172a;
        background-image: radial-gradient(circle at top right, rgba(12, 74, 110, 0.5), transparent 50%),
                          radial-gradient(circle at bottom left, rgba(12, 74, 110, 0.5), transparent 50%);
    }
    .contact-card {
        max-width: 450px;
        width: 100%;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0));
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2.5rem;
        text-align: center;
        box-shadow: 0 20px 40px -10px rgb(0 0 0 / 0.2);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    .contact-card:hover {
        border-color: rgba(96, 165, 250, 0.5);
    }
    .profile-picture {
        width: 120px; height: 120px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 0 15px rgba(96, 165, 250, 0.3);
    }
    .profile-picture img { width: 100%; height: 100%; object-fit: cover; }
    .faculty-name { font-size: 2rem; font-weight: 800; color: #fff; margin: 0; }
    .faculty-title { font-size: 1rem; color: #cbd5e1; margin: 0.25rem 0 0; }
    .separator { height: 1px; background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent); margin: 2rem 0; }
    .contact-details { display: flex; flex-direction: column; gap: 1.5rem; }
    .contact-item { display: inline-flex; align-items: center; justify-content: center; gap: 0.75rem; color: #cbd5e1; text-decoration: none; transition: color 0.3s ease; }
    .contact-item:hover { color: #a5b4fc; }
    .contact-item .icon { width: 20px; height: 20px; }
    .fade-in-up { opacity: 0; transform: translateY(30px); animation: fadeInUpAnimation 0.8s 0.2s ease-out forwards; }
    @keyframes fadeInUpAnimation { to { opacity: 1; transform: translateY(0); } }
</style>